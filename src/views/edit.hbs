<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card bg-dark p-4 text-white">
        <div class="card-header text-center">
          <h2>Editar Tarea</h2>
        </div>
        <div class="card-body">
          <form action="/tasks/{{task._id}}/edit" method="POST">
            <input
              type="text"
              name="title"
              placeholder="Título"
              value="{{task.title}}"
              class="form-control mb-3"
            />

            <textarea
              name="description"
              rows="3"
              placeholder="Añade una descripción"
              class="form-control mb-3"
            >{{task.description}}</textarea>
            <div class="d-grid w-50 mx-auto">
              <button class="btn btn-outline-primary">Editar</button>

            </div>
          </form>

        </div>
      </div>
    </div>

  </div>
</div>